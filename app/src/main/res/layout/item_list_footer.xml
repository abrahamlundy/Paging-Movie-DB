<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <import type="com.darkray.pagingmoviedb.enums.State" />

        <variable
            name="state"
            type="com.darkray.pagingmoviedb.enums.State" />

        <variable
            name="viewModel"
            type="com.darkray.pagingmoviedb.ui.activity.mainActivity.MainViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:theme="@style/progressBarColorPrimary"
            android:visibility="@{state.equals(State.LOADING) ? View.VISIBLE : View.GONE}" />

        <TextView
            android:id="@+id/txt_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="@{() -> viewModel.retry()}"
            android:text="@string/error"
            android:visibility="@{state.equals(State.ERROR) ? View.VISIBLE : View.GONE}" />

    </RelativeLayout>
</layout>